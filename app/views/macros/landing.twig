{% macro image(src, alt, class) %}
  <img src="{{path}}/{{src}}" alt="{{alt}}" class="{{ class }}">
{% endmacro %}

{% macro button(class, text, attributes) %}
  {% import "macros/form.twig" as form %}
  {% set default = "btn btn_brand-1 btn_hover" %}
  {{form.button('button', "#{default} #{class}", text, attributes)}}
{% endmacro %}

{% macro header(headerClass, title, subtitle) %}
  <div class="section__header {{headerClass}}">
    {% if title %}
      <h3 class="section__title {{title.class}}">{{title.text|raw}}</h3>
    {% endif %}
    {% if subtitle %}
      <p class="section__subtitle {{subtitle.class}}">{{subtitle.text|raw}}</p>
    {% endif %}
  </div>
{% endmacro %}

{% macro skew(type, customClass) %}
    {% import _self as landingMacros %}
    {{ landingMacros.image("img/skew-#{type}.png", 'skew', "skew skew_delay_#{type} #{customClass}") }}
{% endmacro %}