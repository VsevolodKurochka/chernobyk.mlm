{% macro image(src, alt) %}
  <img src="{{path}}/{{src}}" alt="{{alt}}">
{% endmacro %}

{% macro button(type, class, text, attributes) %}
  {% import "macros/form.twig" as form %}
  {% set default = "btn btn_brand-1 effect effect_bounce-top" %}
  {{form.button('button', "#{default} #{class}", text, attributes)}}
{% endmacro %}